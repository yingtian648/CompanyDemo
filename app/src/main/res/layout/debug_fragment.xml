<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="USB2.0"/>
        <Switch
            android:id="@+id/sw_adb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:textOff="关"
            android:textOn="开"
            android:showText="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="32sp"
            android:textColor="@color/red"
            android:text="Tips: 开启则为device模式支持adb，关闭则为host模式"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="USB3.0"/>
        <Switch
            android:id="@+id/sw_adb2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:textOff="关"
            android:textOn="开"
            android:showText="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="32sp"
            android:textColor="@color/red"
            android:text="Tips: 默认开启，开启则为device模式支持adb，关闭则为host模式"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="跳过NDK教学"/>
        <Switch
            android:id="@+id/sw_ndk_switch"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:textOff="关"
            android:textOn="开"
            android:showText="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="32sp"
            android:text="Tips: 不进入教学模式"/>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="进入刷机模式开关"/>
        <Switch
            android:id="@+id/sw_fastboot_str"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:textOff="关"
            android:textOn="开"
            android:showText="true"/>
        <TextView
            android:id="@+id/sw_fastboot_str_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_marginLeft="80dp"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="32sp"
            android:textColor="@color/red"
            android:text="待完善"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="@string/enable_wiress_adb"/>
        <Switch
            android:id="@+id/sw_wiress_adb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:textOff="关"
            android:textOn="开"
            android:showText="true"/>
        <TextView
            android:id="@+id/wiress_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_marginLeft="80dp"
            android:text="Wi-Fi IP: 未连接"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="32sp"
            android:textColor="@color/red"
            android:text="@string/enable_wiress_adb_summary"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/adb_open_float_window"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="打开截屏浮窗"/>

        <Button
            android:id="@+id/adb_close_float_window"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="关闭截屏浮窗"/>
    </LinearLayout>
</LinearLayout>
