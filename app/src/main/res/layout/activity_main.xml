<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_200"
        android:hint="输入框..."
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:padding="5dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:singleLine="true"
        android:textSize="40px"
        app:layout_constraintBottom_toTopOf="@id/btnBox" />

    <LinearLayout
        android:id="@+id/btnBox"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/style_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="全屏测试按钮"
            android:textSize="30px"
            app:layout_constraintBottom_toTopOf="@id/btnApp" />

        <Button
            android:id="@+id/btnApp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="LocationTest"
            android:textAllCaps="false"
            android:textSize="30px" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="AppInfos"
            android:textAllCaps="false"
            android:textSize="30px" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="测试按钮"
            android:textAllCaps="false"
            android:textSize="30px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="20px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:background="@drawable/toast_shadow"
            android:maxWidth="600dp"
            android:paddingStart="44px"
            android:paddingTop="6px"
            android:paddingEnd="44px"
            android:paddingBottom="6px"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/black33"
            android:textSize="40px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black33"
            android:textSize="40px" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textColor="@color/black33"
            android:textSize="40px" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textColor="@color/black33"
            android:textSize="40px" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textColor="@color/black33"
            android:textSize="40px" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textColor="@color/black33"
            android:textSize="40px" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textColor="@color/black33"
            android:textSize="40px" />
    </LinearLayout>

    <TextView
        android:id="@+id/topT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="30px"
        android:text="Top TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>