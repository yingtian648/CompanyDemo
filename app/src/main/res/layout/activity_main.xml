<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/win_bg"
        android:focusableInTouchMode="true"
        tools:context=".MainActivity">

        <com.exa.companydemo.widget.EndLineView
            android:id="@+id/elv"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <com.exa.companydemo.widget.Titlebar
            android:id="@+id/toolbar"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:ellipsize="end"
            android:background="@color/green"
            android:hint="@string/font_words_signal"
            android:textSize="36sp"
            android:paddingStart="120dp"
            android:paddingEnd="120dp"
            android:visibility="visible"
            android:fontFamily="serif"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            />

        <TextView
            android:id="@+id/msgT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:padding="10dp"
            android:hint="desc..."
            android:gravity="end"
            android:textSize="20sp"
            android:maxLines="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <include
            layout="@layout/layout_fonts"
            android:id="@+id/fontsBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/btnBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSystemUI"
                    android:text="SystemUi测试"
                    style="@style/main_btn"
                    />

                <Button
                    android:id="@+id/btnPlay"
                    android:text="视频播放"
                    style="@style/main_btn" />

                <Button
                    android:id="@+id/btnEngineMode"
                    android:text="工程模式"
                    style="@style/main_btn" />

                <Button
                    android:id="@+id/btnNightMode"
                    android:text="白天黑夜"
                    style="@style/main_btn" />


                <Button
                    android:id="@+id/btnLocation"
                    android:text="Location测试"
                    style="@style/main_btn" />

                <Button
                    android:id="@+id/btnToast"
                    android:text="Toast测试"
                    style="@style/main_btn" />

                <Button
                    android:id="@+id/btnAppList"
                    android:text="App列表"
                    style="@style/main_btn" />

                <Button
                    android:id="@+id/btnTestActivity"
                    android:text="TestActivity"
                    style="@style/main_btn" />

                <Button
                    android:id="@+id/btnTest"
                    android:text="测试按钮"
                    style="@style/main_btn" />
            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="500px"
            android:layout_height="500px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/tvel"
            android:layout_width="500px"
            android:layout_height="500px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>