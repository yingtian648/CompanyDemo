<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_customer_normal"
    android:maxWidth="@dimen/toast_max_width"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/toast_text_marginHorizontal"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginVertical="@dimen/toast_text_marginVertical"
        android:textAppearance="@style/TextAppearance.AppCompat.ToastNew"
        android:textColor="@color/primary_text_default_material_light"
        />

</LinearLayout>