<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout android:orientation="horizontal"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="测试结果："/>

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </LinearLayout>

            <Button
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="OTA注册监听" />

            <Button
                android:id="@+id/bt_unregister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="OTA反注册监听" />

            <Button
                android:id="@+id/bt_connect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="OTA绑定服务" />

            <Button
                android:id="@+id/bt_proxy_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="Proxy注册监听" />

            <Button
                android:id="@+id/bt_proxy_unregister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="Proxy反注册监听" />

            <Button
                android:id="@+id/bt_proxy_connect"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="Proxy连接状态" />

            <Button
                android:id="@+id/bt_getotadir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="Proxy获取OTA目录" />

            <Button
                android:id="@+id/bt_policydir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="获取策略目录" />

            <Button
                android:id="@+id/bt_packagedir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="获取包目录" />

            <Button
                android:id="@+id/bt_requestota"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="Proxy发送请求" />

            <Button
                android:id="@+id/bt_responseota"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="Proxy发送响应" />

            <Button
                android:id="@+id/bt_init_download"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="初始化下载任务" />

            <Button
                android:id="@+id/bt_start_download"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="开始下载" />

            <Button
                android:id="@+id/bt_pause_download"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="停止下载" />

            <Button
                android:id="@+id/bt_release"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClick"
                android:text="销毁下载" />
        </LinearLayout>
    </ScrollView>

</layout>
