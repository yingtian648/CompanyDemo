<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />

            <gradient
                android:centerColor="#1A0A1532"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#020A1532"
                android:startColor="#020A1532"
                android:type="radial" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>